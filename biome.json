{
   "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
   "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
   },
   "files": {
      "ignoreUnknown": false,
      "ignore": []
   },
   "formatter": {
      "enabled": true,
      "formatWithErrors": true,
      "lineEnding": "lf",
      "lineWidth": 200
   },
   "organizeImports": {
      "enabled": true
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "suspicious": {
            "noAssignInExpressions": "off"
         }
      }
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "single",
         "indentStyle": "space",
         "indentWidth": 3
      }
   }
}
